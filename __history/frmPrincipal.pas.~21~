procedure TFramePrincipal.btnBaixoClick(Sender: TObject);
begin
    y1Linha := y1Linha - 0.5;
  y2Linha := y2Linha - 0.5;

  yEsqTri  := yEsqTri - 0.5;
  yCimaTri := yCimaTri - 0.5;
  yDirTri  := yDirTri - 0.5;

  yEsqCimaQuad  := yEsqCimaQuad - 0.5;
  yDirCimaQuad  := yDirCimaQuad - 0.5;
  yDirBaixoQuad := yDirBaixoQuad - 0.5;
  yEsqBaixoQuad := yEsqBaixoQuad - 0.5;

  yPonto := yPonto - 0.5;
end;

